 }
 /* Set the styles for the graphical element */
 .graphical-element {
 width: 200px;
 height: 200px;
 border-radius: 50%;
 background-color: rgba(255, 255, 255, 0.5);
 position: absolute;
 top: 50%;
 left: 50%;
